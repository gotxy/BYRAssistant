{
  "name": "BYR/SMTH助手",
  "version": "0.1",
  "description": "为北邮人/水木社区增加自动翻页/黑名单功能",
  "background": {
    "scripts": ["js/background.js"]
  },
  "page_action": {
    "default_icon" : "img/icon-16.png",
    "default_title" : "BYR/SMTH助手",
    "default_popup": "html/popup.html"
  },
  "permissions": [
    "tabs",
  	"webRequest",
    "storage",
  	"*://*.byr.cn/*",
    "*://*.newsmth.net/*"
  ],
  "content_scripts": [
    {
      "js": [ 
        "js/jquery-1.10.2.js",
        "js/assistant.js"
      ],
      "matches": [
        "*://*.byr.cn/*",
        "*://*.newsmth.net/*"
      ],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "options_page": "html/options.html",
  "icons": {
    "16": "img/icon-16.png",
    "32": "img/icon-32.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "manifest_version": 2
}
